// Prisma schema for Social Saver Bot
// This schema is designed for local development using SQLite.
// For production, change provider to "postgresql" and update DATABASE_URL.
// Make sure to run: npx prisma generate && npx prisma migrate dev

generator client {
  provider = "prisma-client-js"
  previewFeatures = []
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ---------------- ENUMS ----------------

enum UserType {
  email
  phone
}

enum PlatformType {
  instagram
  twitter
  dribbble
  youtube
  blog
  other
}

enum SessionStatus {
  active
  expired
  revoked
}

// ---------------- USER MODEL ----------------

model User {
  id           String    @id @default(cuid())
  identifier   String
  type         UserType
  fullName     String?
  avatarUrl    String?
  bio          String?
  isVerified   Boolean   @default(false)
  isActive     Boolean   @default(true)
  lastLoginAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  sessions     Session[]
  links        Link[]
  logs         ActivityLog[]

  @@unique([identifier])
  @@index([createdAt])
}

// ---------------- SESSION MODEL ----------------

model Session {
  id          String        @id @default(cuid())
  userId      String
  token       String        @unique
  ipAddress   String?
  userAgent   String?
  status      SessionStatus @default(active)
  expiresAt   DateTime
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

// ---------------- OTP MODEL ----------------

model Otp {
  identifier String   @id
  code       String
  attempts   Int      @default(0)
  expiresAt  DateTime
  createdAt  DateTime @default(now())
}

// ---------------- LINK MODEL ----------------

model Link {
  id            String       @id @default(cuid())
  name          String
  url           String
  description   String
  platform      PlatformType
  thumbnailUrl  String?
  clickCount    Int          @default(0)
  isPublic      Boolean      @default(true)
  tags          String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  userId        String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, platform])
  @@index([platform])
}

// ---------------- ACTIVITY LOG MODEL ----------------

model ActivityLog {
  id          String   @id @default(cuid())
  action      String
  metadata    String?
  userId      String
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

// ---------------- SETTINGS MODEL ----------------

model Settings {
  id             String   @id @default(cuid())
  userId         String   @unique
  darkMode       Boolean  @default(false)
  emailNotify    Boolean  @default(true)
  smsNotify      Boolean  @default(false)
  language       String   @default("en")
  timezone       String   @default("UTC")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
